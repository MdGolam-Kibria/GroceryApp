<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/orderIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order : 1212121"
            android:textColor="@color/black"
            android:textStyle="bold" />
<!--date when order was placed -->
        <TextView
            android:id="@+id/orderDateTv"
            android:layout_toStartOf="@id/nextIv"
            android:layout_toLeftOf="@id/nextIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/MM/yyy"
            android:textColor="@color/gray" />
<!--email of the user who placed order-->
        <TextView
            android:id="@+id/emailTv"
            android:layout_below="@+id/orderIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc@gmail.com"
            android:textColor="@color/gray" />
<!--        total amount of the order-->
        <TextView
            android:id="@+id/amountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@+id/emailTv"
            android:text="Total Amount : $32.33"
            android:textColor="@color/gray" />
<!--        oorder status : in progress,complete,canceled-->
        <TextView
            android:id="@+id/statusTv"
            android:layout_below="@+id/emailTv"
            android:layout_marginTop="5dp"
            android:text="In progress"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/nextIv"
            android:layout_toLeftOf="@+id/nextIv" />
        <ImageView
            android:id="@+id/nextIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_next_gray" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>